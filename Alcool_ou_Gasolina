#JavaScript
const cx_preco_g = document.querySelector('#input_gasolina')
const cx_preco_a = document.querySelector('#input_alcool')
const cx_performance = document.querySelector('#input_performance')
const cx_dinheiro = document.querySelector('#input_dinheiro')
const cx_distancia = document.querySelector('#input_distancia')
const btn_enviar = document.getElementById('btn_calcular')

btn_enviar.addEventListener('click', () => {
    nome_g.innerText = "GASOLINA"
    nome_a.innerText = "ALCOOL"

    let preco_ga = Number(cx_preco_g.value)
    let preco_al = Number(cx_preco_a.value)
    let efi_g = Number(cx_performance.value)
    let efi_a = efi_g * 0.7
    let dinheiro = Number(cx_dinheiro.value)
    let distancia = Number(cx_distancia.value)

    let lit_gas_g = distancia / efi_g
    let lit_gas_a = distancia / efi_a
    let gastos_g = lit_gas_g * preco_ga
    let gastos_a = lit_gas_a * preco_al

    quant_g.innerText = `Você precisara de ${lit_gas_g} L`
    quant_a.innerText = `Você precisara de ${lit_gas_a} L`
    preco_g.innerText = `Saira no total por ${gastos_g} R$`
    preco_a.innerText = `Saira no total por ${gastos_a} R$`

    if (gastos_g > dinheiro) {
        let falt_g = gastos_g - dinheiro
        suficiente_g.innerText = `Você não tem o suficiente para viajar falta ${falt_g} R$`
    }
    else if (gastos_g <= dinheiro) {
        let sobra_g = dinheiro - gastos_g
        suficiente_g.innerText = `Você tem o suficiente para viajar e ira sobrar ${sobra_g} R$`
    }

    if (gastos_a > dinheiro) {
        let falt_a = gastos_a - dinheiro
        suficiente_a.innerText = `Você não tem o suficiente para viajar falta ${falt_a} R$`
    }
    else if (gastos_a <= dinheiro) {
        let sobra_a = dinheiro - gastos_a
        suficiente_a.innerText = `Você tem o suficiente para viajar e ira sobrar ${sobra_a} R$`
    }

    if (gastos_a > gastos_g) {
        red = gastos_a - gastos_g
        dica.innerText = `Recomendo você viajar com gasolina pois economizará R$ ${red} em relação ao outro combustível`
    }

    else if (gastos_a < gastos_g) {
        red = gastos_g - gastos_a
        dica.innerText = `Recomendo você viajar com alcool pois economizará R$ ${red} em relação ao outro combustível`
    }

    else if (gastos_a == gastos_g) {
        red = gastos_g - gastos_a
        dica.innerText = `Recomendo você viajar com qualquer combustivel pois economizará R$ ${red} em relação ao outro combustível`
    }

})
